<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/ActionBar.Theme</item>
    </style>

    <!-- ActionBar theme -->
    <style name="ActionBar.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/ActionBar.Title</item>
    </style>

    <!-- ActonBar title theme -->
    <style name="ActionBar.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Label -->
    <style name="LabelField" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/label_field_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Data output -->
    <style name="SimpleField" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/simple_field_text_size</item>
    </style>

    <!-- Input field -->
    <style name="InputField" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/input_field_text_size</item>
        <item name="android:maxLength">8</item>
        <item name="android:maxLines">1</item>
        <item name="android:hint">@string/default_coefficient</item>
        <item name="android:inputType">numberSigned|numberDecimal</item>
    </style>

</resources>
